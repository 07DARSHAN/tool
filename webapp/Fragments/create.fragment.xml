<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Dialog id="addRecordDialog" title="Add New Record" draggable="true" resizable="true" contentWidth="400px">
        <content>
            <form:SimpleForm id="form" binding="{/newRecord}">
                <Label text="Product"/>
                <Input value="{Product}" id="inputID" width="100%" placeholder="Enter Product Name"/>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" press="onSave" type="Success"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancel" type="Reject"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
